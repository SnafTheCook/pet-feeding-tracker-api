@page "/pets"
@using DidWeFeedTheCatToday.Shared.DTOs.Pets
@using DidWeFeedTheCatToday.Client.Services
@inject PetService PetClient

<PageTitle>Our Pets</PageTitle>

<h1>Pets</h1>

@if (pets == null)
{
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else if (!pets.Any())
{
    <p>Add your pets to see them here!</p>
}
else
{
    <div class="row">
        @foreach (var pet in pets)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@pet.Name</h5>
                        <p class="card-text">Age: @pet.Age</p>
                        <p class="text-muted">@pet.AdditionalInformation</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => HandleDelete(pet.Id)">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<GetPetDTO>? pets;

    protected override async Task OnInitializedAsync()
    {
        pets = await PetClient.GetPetsAsync();
    }

    private async Task HandleDelete(int id)
    {
        var success = await PetClient.DeletePetAsync(id);
        if (success)
        {
            pets?.RemoveAll(pet => pet.Id == id);
        }
    }
}
